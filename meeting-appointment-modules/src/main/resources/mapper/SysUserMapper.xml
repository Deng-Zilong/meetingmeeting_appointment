<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfzt.meeting.mapper.SysUserMapper">

    <resultMap id="BaseResultMap" type="com.jfzt.meeting.entity.SysUser">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="VARCHAR"/>
            <result property="userName" column="user_name" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="level" column="level" jdbcType="TINYINT"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,user_name,
        password,level,is_deleted
    </sql>

    <update id="deleteAdmin" parameterType="String">
        update sys_user set level = 2 where user_id = #{userId}
    </update>

    <update id="addAdmin" parameterType="String">
        update sys_user set level = 1 where user_id = #{userId}
    </update>

    <select id="selectByUserId" resultType="com.jfzt.meeting.entity.SysUser">
        select id,user_id,user_name,password,level,is_deleted from sys_user where user_id = #{userId}
    </select>

</mapper>
